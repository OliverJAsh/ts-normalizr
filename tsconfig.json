{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./lib",
    "target": "es6",
    "strict": true
  },
}
